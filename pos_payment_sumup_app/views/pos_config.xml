<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos.payment.sumup_app.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='iface_cashdrawer']/parent::div" position="after">
                <div class="row">
                   <label string="Sumup App Proxy" for="iface_sumup_app" class="col-md-3 o_light_label"/>
                   <field name="iface_sumup_app"/>
                </div>
            </xpath>
            <xpath expr="//div[@id='payment_methods']" position="after">
                <div id="payment_sumup_app" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                       <field name="module_pos_payment_sumup_app"/>
                    </div>
                    <div class="o_setting_right_pane">
                       <label for="module_pos_payment_sumup_app"/>
                       <div class="text-muted">
                            Accept payments with sumup app
                       </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//sheet" positon="inside">
                <h2 attrs="{'invisible': [('module_pos_payment_sumup_app', '=', False)]}">Sumup App Payments</h2>
                <div id="payment_sumup_app_settings" class="row mt16 o_settings_container" attrs="{'invisible': [('module_pos_payment_sumup_app', '=', False)]}">
                    <div id="local_sumup_app" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_local_sumup_app"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Use Local App" for="use_local_sumup_app"/>
                            <div class="text-muted">
                                Use locally installed Sumup app for payments by issuing an url-call.
                            </div>
                        </div>
                    </div>
                    <div id="sumup_app_application_identifier" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Application Identifier" for="sumup_app_application_identifier"/>
                            <div class="text-muted">
                                Application identifier as entered in the development dashboard of you sumup account.
                            </div>
                            <field name="sumup_app_application_identifier" attrs="{'required': [('module_pos_payment_sumup_app', '=',
 True)]}"/>
                        </div>
                    </div>
                    <div id="sumup_app_affiliate_key" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Affiliate Key" for="sumup_app_affiliate_key"/>
                            <div class="text-muted">
                                Sumup affiliate-key as generated for the application identifier above.
                            </div>
                            <field name="sumup_app_affiliate_key" attrs="{'required': [('module_pos_payment_sumup_app', '=', True)]}"
/>
                        </div>
                    </div>
                    <div id="sumup_app_callback" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Callback URL" for="sumup_app_callback"/>
                            <div class="text-muted">
                                URL called by the sumup app on transaction end. Depends wether proxy or server is used.
                            </div>
                            <field name="sumup_app_callback" attrs="{'required': [('module_pos_payment_sumup_app', '=', True)]}"
/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
